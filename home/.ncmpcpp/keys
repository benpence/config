key_find_forward                    = '/'
key_find_backward                   = '?'
key_next_found_position             = 'n'                   # move forward in find
key_prev_found_position             = 'N'                   # move back in find

key_toggle_display_mode             = 9     # tab
key_home                            = 'K'                   # move to top
key_page_up                         = 2     # ctrl b
key_end                             = 'J'                   # move to bottom
key_page_down                       = 6     # ctrl f
