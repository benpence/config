#!/bin/sh
# push is a very simple stack-in-a-string that holds paths (keeps backslashes in paths)
stack=~/.stack
dir=`pwd`

if [ -z "$1" ]; then
    new="$dir"
else 
    for p in "$@"; do
        p="$(sed 's/ /\\ /g' <<< $p)"

        if [[ "$p" == /* ]]; then
            new="$p $new"
        else
            new="$dir/$p $new"
        fi;
    done;
fi;

echo -n " $new" >> $stack
